<h2><%= @survey.title %></h2>
<form action="/surveys/<%= @survey.id %>/add-question" method="post">
  <label for="question">Question:</label>
  <input class="form-control" type="text" name="question" id="question">
  <button type="submit" class="btn btn-success">Add Question</button>
</form>


<h3>Questions</h3>
<form action="/surveys/<%= @survey.id %>/submit" method="post">
  <ol>
    <% @survey.questions.each do |question| %>
      <li><%= question.content %></li>
      <input class="form-control" type="text" name="result[][answer]" placeholder="Your Answer">
      <input type="hidden" name="question_id[][question_id]" value="<%= question.id %>">
    <% end %>
  </ol>
  <button type="submit" class="btn btn-success">Submit Answers</button>
</form>
